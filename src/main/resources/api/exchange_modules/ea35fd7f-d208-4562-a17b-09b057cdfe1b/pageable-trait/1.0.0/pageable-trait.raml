#%RAML 1.0 Trait
usage: Defines standard approach to paging results of a given resource

queryParameters:
  maxResults:
    description: The maximum number of entries to return. This is optional.
    type: integer
    required: false
    default: 25
    example: 25
  offset:
    description: The 1-based index of the first result to be retrieved (for paging).
    type: integer
    required: false
    default: 0
    example: 0